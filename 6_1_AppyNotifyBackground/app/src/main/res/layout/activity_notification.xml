<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <RadioGroup
        android:id="@+id/options_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notificaciones con estilos"/>
        <RadioButton
            android:id="@+id/option_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificacion Basica"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/option_bigtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto Incluido"/>
        <RadioButton
            android:id="@+id/option_bigpicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificacion con imagen"/>
        <RadioButton
            android:id="@+id/option_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estilo Inbox"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Estilos con Seguridad"/>
        <RadioButton
            android:id="@+id/option_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Version Lockscreen"/>
        <RadioButton
            android:id="@+id/option_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification en Secreto"/>
        <RadioButton
            android:id="@+id/option_headsup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificacion Heads-Up "/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar Notificacion"
        android:onClick="onPostClick"/>

</LinearLayout>