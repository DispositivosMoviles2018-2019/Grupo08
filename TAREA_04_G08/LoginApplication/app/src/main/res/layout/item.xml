<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_below="@+id/User"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView4"
        android:text="Usuario"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f65034"
        android:textSize="21sp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:id="@+id/imageView4"
        android:cropToPadding="false"
        android:src="@drawable/log1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:adjustViewBounds="true"
        android:layout_above="@+id/Genero"
        android:layout_toLeftOf="@+id/nombre"
        android:layout_toStartOf="@+id/nombre" />

    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:layout_below="@+id/User"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_alignBaseline="@+id/apellido"
        android:layout_alignBottom="@+id/apellido"
        android:layout_toLeftOf="@+id/Becado"
        android:layout_toStartOf="@+id/Becado"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:layout_alignBaseline="@+id/Email"
        android:layout_alignBottom="@+id/Email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/fechaN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="15dp"
        android:text="Nacimiento" />

    <TextView
        android:id="@+id/Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:layout_alignBaseline="@+id/fechaN"
        android:layout_alignBottom="@+id/fechaN"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email" />

    <TextView
        android:id="@+id/Becado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Becado"
        android:layout_alignBaseline="@+id/Genero"
        android:layout_alignBottom="@+id/Genero"
        android:layout_alignLeft="@+id/celular"
        android:layout_alignStart="@+id/celular" />

</RelativeLayout>